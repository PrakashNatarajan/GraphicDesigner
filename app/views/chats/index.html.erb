<div class="row">
  <div class="col-md-9">
    <ul id="conversations-list">
      <% @conversations.each do |conversation| %>
        <%= render 'conversations/conversation', conversation: conversation, member: current_member %>
      <% end %>
    </ul>
  </div>

  <div class="col-md-3">
    <div class="panel panel-primary">
      <div class="panel-heading">
        <h3 class="panel-title">Member list</h3>
      </div>
      <div class="panel-body">
        <ul>
          <% @members.each do |member| %>
            <li><%= link_to(member.email, conversations_path(member_id: member), remote: true, method: :post)%></li>
          <% end %>
        </ul>
      </div>
    </div>
  </div>
</div>